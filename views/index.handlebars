<h1>Eat da Burger!</h1>
<br>

<div class="col" id="burger-png">
  <img src="/assets/img/burger.png" class="burgerImg" id="png" width="100" height="150">
</div>
<br>

<div class="unEaten-table">
  <h2>Burgers To Eat!</h2>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>


</div>

<div class="devoured-table">
  <h2>Burgers Devoured!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>


</div>


<div class="burger-maker">
  
  <form id="create-form">

    <h2>Add a Burger</h2>

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name">
    </div>



    <div class="form-group">
      <label for="devoured">Devoured?</label><br>
      <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0" id="unEaten"> unEaten
    </div>

    <button type="submit">Add Burger</button>
  </form>




</div>